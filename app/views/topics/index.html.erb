<h1>Topics</h1>

<table cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <th>Vote on These Topics</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @topics.each do |topic| %>
  <tr>
    <td><%= link_to topic.title, topic %></td>
    <td><%=pluralize(topic.votes.length, "vote")%></td>
    <td><%=button_to 'Y', votes_path(topic_id: topic.id), method: :post %></td>
  
    <td><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Topic', new_topic_path %>
